{
    "name": "gameitemslist/api",
    "description": "Slim 4 bootstrap for Game Items List API",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "vlucas/phpdotenv": "^5.6",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "firebase/php-jwt": "^6.10",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.11",
        "squizlabs/php_codesniffer": "^3.9",
        "friendsofphp/php-cs-fixer": "^3.57"
    },
    "autoload": {
        "psr-4": {
            "GameItemsList\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GameItemsList\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "coverage-check": "php tools/coverage-guard.php var/phpunit/coverage.txt --min-lines=85 --min-branches=75 --allow-missing-branches",
        "phpstan": "phpstan analyse -c phpstan.neon.dist",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "fix": "php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
